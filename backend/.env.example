# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/eatease_db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# AWS Configuration (for future use)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=eatease-storage
AWS_REGION=us-east-1

# Google Cloud Vision (for ingredient detection)
GOOGLE_VISION_CREDENTIALS=credentials/google-vision.json
# For cloud deployments (Render/Heroku): base64-encode the credentials JSON
# GOOGLE_VISION_CREDENTIALS_JSON=<base64-encoded-json>

# Application Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads/
